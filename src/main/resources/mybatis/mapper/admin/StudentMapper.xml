<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cg.dao.admin.StudentDao">
	<!-- 考生插入操作 -->
	<insert id="add" parameterType="com.cg.entity.admin.Student">
		insert into student(id,subjectId,name,password,trueName,tel,createTime) values(null,#{subjectId},#{name},#{password},#{trueName},#{tel},#{createTime})
	</insert>
	<!-- 考生更新操作 -->
	<update id="edit" parameterType="com.cg.entity.admin.Student">
		update student set name = #{name},subjectId = #{subjectId},password = #{password},trueName = #{trueName},tel = #{tel} where id = #{id}
	</update>
	<!-- 考生信息按登录名查询 -->
	<select id="findByName" parameterType="String" resultType="com.cg.entity.admin.Student">
		select * from student where name = #{value}  
	</select>
	<!-- 考生信息搜索查询 -->
	<select id="findList" parameterType="Map" resultType="com.cg.entity.admin.Student">
		select * from student
		<where>
			<if test="name != null and name!= ''">
				and name like '%${name}%'
			</if>
			<if test="subjectId != null">
				and subjectId = ${subjectId}
			</if>
			<if test="subjects != null">
				and subjectId in
				<foreach collection="subjects" item="subject" open="(" separator="," close=")">
					#{subject.id}
				</foreach>
			</if>
		</where>
		<if test="offset != null and pageSize != null">
			limit #{offset},#{pageSize}
		</if>
	</select>
	<!-- 模糊搜索总条数 -->
	<select id="getTotal" parameterType="Map" resultType="Integer">
		select count(*) from student
		<where>
			<if test="name != null">
				and name like '%${name}%'
			</if>
			<if test="subjectId != null">
				and subjectId = #{subjectId}
			</if>
		</where>
	</select>
	<!-- 删除考生信息 -->
	<delete id="delete">
		delete from student where id in
		<foreach collection="students" item="student" open="(" separator="," close=")">
			#{student.id}
		</foreach>
	</delete>
</mapper>